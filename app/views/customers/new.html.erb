<h1>New Customer Sign-Up:</h1>

<% if flash[:errors] %>
	<% flash[:errors].each do |error| %>
		<p style="color:red;"><%= error %></p>
	<% end %>
<% end %>


<%= form_for @customer do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :age %>
	<%= f.number_field :age %>

	<%= f.label :email %>
	<%= f.text_field :email %>

	<%= f.submit "Sign Up!ðŸ· " %>
<% end %>
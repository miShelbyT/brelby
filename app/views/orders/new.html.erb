<h1> Order Form </h1>

<% if flash[:errors] %>
	<% flash[:errors].each do |error| %>
		<p style="color:red;"><%= error %></p>
	<% end %>
<% end %>


<%= form_for @order do |f| %>
	<%= f.label :customer_id %>
	<%= f.collection_select :customer_id, Customer.all, :id, :name %>

	<%= f.label :wine_id %>
	<%= f.collection_select :wine_id, Wine.all, :id, :name %>

	<%= f.label :cupcake_id %>
	<%= f.collection_select :cupcake_id, Cupcake.all, :id, :name %>

	<%= f.submit "Sign Up!ðŸ· " %>
<% end %>